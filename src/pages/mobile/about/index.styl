.mobile-about-box{
  width: 100%
  overflow: hidden;
  >ul{
    margin-top: 2rem
    width: 100%
    display flex
    justify-content space-between
    flex-wrap wrap
    >li{
      position relative
      width: 50%
      height: 20rem
      padding: 0 2rem 2rem 2rem
      cursor pointer
      >div{
        position relative
        width: 100%
        height: 100%
        border-radius 1rem
        box-shadow 0 0 .1rem #f1f1f11
        overflow hidden
        transition all .3s
        &:active{
          transform scale(.9)
        }
        &:active>.tip{
          top: 0
        }
        >img{
          width: 100%
          height: 100%
          object-fit cover
        }
        >.tip{
          position absolute
          top: 100%
          left: 0
          width: 100%
          height: 100%
          display flex
          align-items center
          justify-content center
          color #fff
          transition all .3s
          background-color: rgba(0,0,0,.6)
        }
      }
    }
  }
}
