.mobile-home-box{
  width: 100%
  >.contact-us{
    width: 100%
    overflow: hidden;
    >.middle{
      width: 100%
      >.left{
        width: 100%
        height: 30rem
        padding: 1rem
        >.map{
          height: 100%
          border: .1rem solid #f1f1f1
        }
      }
      >.right{
        width: 100%
        padding: 2rem
        >.contact{
          width: 100%
          height: 100%
          >p{
            font-weight: 600
          }
        }
      }
    }
  }
  >.banner{
    width: 100%
    height: 16rem
    background-color: #f9f9f9
    overflow: hidden;
  }
  >.center{
    width: 100%
    overflow: hidden;
    >ul{
      margin-top: 2rem
      width: 100%
      display flex
      justify-content space-between
      flex-wrap wrap
      >li{
        position relative
        width: 50%
        height: 20rem
        padding: 0 2rem 2rem 2rem
        cursor pointer
        >div{
          position relative
          width: 100%
          height: 100%
          overflow hidden
          border-radius 1rem
          transition all .3s
          &:active{
            transform scale(.9)
          }
          &:active>.tip{
            top: 0
          }
          >img{
            width: 100%
            height: 100%
            object-fit cover
          }
          >.tip{
            position absolute
            top: 100%
            left: 0
            width: 100%
            height: 100%
            display flex
            align-items center
            justify-content center
            color #fff
            transition all .3s
            background-color: rgba(0,0,0,.6)
          }
        }
      }
    }
  }
  >.newEnergy{
    width: 100%
    overflow: hidden;
    >ul{
      margin-top: 2rem
      width: 100%
      display flex
      justify-content space-between
      flex-wrap wrap
      >li{
        padding: 0 2rem 2rem 2rem
        width: 50%
        display flex
        justify-content center
        align-items center
        flex-direction column
        >img{
          width: 6rem
          height: 6rem
          transition all .3s
          &:active{
            transform scale(1.1)
          }
        }
        >span{
          margin: 1rem 0
        }
        >p{
          font-weight: 600
          font-size: 1.2rem
        }
      }
    }
  }
  >.serve-center{
    width: 100%
    overflow: hidden;
    >ul{
      width: 100%
      display flex
      justify-content center
      padding: 0 2rem
      >li{
        width: 50%
        display flex
        flex-direction column
        align-items center
        justify-content center
        >span{
          margin: .5rem
          font-weight: 600
          font-size: 1.2rem
        }
        >img{
          width: 4.2rem
          height: 4.2rem
          border-radius 50%
          transition all .3s
          &:active{
            transform scale(1.1)
          }
        }
      }
    }
  }
}
