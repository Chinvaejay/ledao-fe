#logo{
  float left
  padding: 0 1rem
  height: 3.6rem
  margin-top: 1.5rem
  margin-right: 2rem
  line-height: 3.6rem
  background-color: #02beb6
  color #fff
  border-radius .5rem
}
#admin{
  float right
  padding: 0 1rem
  height: 100%
  display flex
  justify-content center
  align-items center
  color #fff
  cursor pointer
  transition all .3s
  &:hover{
    background-color: #00274b;
  }
}

div.img{
  position relative
  width: 50rem
  height: 30rem
  display flex
  border-radius .6rem
  border: .1rem solid #f1f1f1
  justify-content center
  align-items: center;
  &.qrCode{
    width: 20rem
    height: 20rem
  }
  >img{
    width: 100%
    height: 100%
    object-fit cover
  }
  >svg{
    transform scale(.6)
  }
  >input{
    position absolute
    width: 100%
    height: 100%
    left: 0
    top: 0
    opacity: 0;
    cursor pointer
  }
}
ul.ul{
  width: 100%
  display flex
  flex-wrap wrap
  >li{
    width: 100%
    line-height: 4rem
    display flex
    padding 0 1rem
    margin-bottom: 1rem
    >.left{
      flex 3
      min-width 15rem
      max-width 15rem
      text-align right
      padding-right: 1rem
    }
    >.right{
      flex 7
      >.avatar{
        position relative
        width: 10rem
        height: 10rem
        background-color: #f9f9f9
        >input{
          width: 100%
          height: 100%
          position absolute
          left: 0
          top: 0
          opacity 0
          cursor pointer
        }
        >img{
          width: 100%
          height: 100%
          object-fit cover
        }
      }
    }
  }
}
