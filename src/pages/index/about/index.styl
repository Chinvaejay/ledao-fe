.about-box{
  width: 100%
  background-color: #f9f9f9
  >.content{
    width: 120rem
    margin: 0 auto
    display flex
    >div{
      padding: 2rem
    }
    >.left{
      flex 3
      min-width 30rem
      max-width 30rem
    }
    >.right{
      flex 6
      >.top{
        width: 100%
        height: 4rem
        line-height: 4rem
        font-size: 2rem
        font-weight: 600
        color #008cd7
        padding-left: 1rem
      }
      >.bottom{
        padding: 1rem
        font-size: 1.4rem
        color: #333;
        line-height: 3.5rem
        border-top .2rem solid #008cd7
        >ul{
          margin-top: 2rem
          width: 100%
          display flex
          justify-content space-between
          flex-wrap wrap
          >li{
            position relative
            width: 30%
            height: 20rem
            padding: 0 2rem 2rem 0
            cursor pointer
            >div{
              position relative
              width: 100%
              height: 100%
              overflow hidden
              &:hover>.tip{
                top: 0
              }
              >img{
                width: 100%
                height: 100%
                object-fit cover
              }
              >.tip{
                position absolute
                top: 100%
                left: 0
                width: 100%
                height: 100%
                display flex
                align-items center
                justify-content center
                color #fff
                transition all .3s
                background-color: rgba(0,0,0,.6)
              }
            }
          }
        }
      }
    }
  }
  >.top{
    width: 100%
    height: 32rem
    >img{
      width: 100%
      height: 100%
      object-fit cover
    }
  }
}
