.home-box{
  width: 100%
  >.contact-us{
    width: 100%
    background-color: #f9f9f9
    >.inner-box{
      width: 120rem
      margin: 2rem auto
      padding-bottom: 2rem
      >.middle{
        width: 100%
        display flex
        >.left{
          flex 1
          height: 30rem
          padding: 1rem
          >.map{
            height: 100%
            border: .1rem solid #f1f1f1
          }
        }
        >.right{
          flex 1
          padding: 2rem
          >.contact{
            width: 100%
            height: 100%
            >p{
              padding-left: 3rem
              font-weight: 600
            }
          }
        }
      }
    }
  }
  >.center{
    width: 100%
    background-color: #f9f9f9
    >.inner-box{
      width: 120rem
      margin: 2rem auto
      padding-bottom: 2rem
      >ul{
        margin-top: 2rem
        width: 100%
        display flex
        justify-content space-between
        flex-wrap wrap
        >li{
          position relative
          width: 25%
          height: 20rem
          padding: 0 2rem 2rem 0
          cursor pointer
          >div{
            position relative
            width: 100%
            height: 100%
            overflow hidden
            &:hover>.tip{
              top: 0
            }
            >img{
              width: 100%
              height: 100%
              object-fit cover
            }
            >.tip{
              position absolute
              top: 100%
              left: 0
              width: 100%
              height: 100%
              display flex
              align-items center
              justify-content center
              color #fff
              transition all .3s
              background-color: rgba(0,0,0,.6)
            }
          }
        }
      }
    }
  }
  >.newEnergy{
    width: 100%
    background-color: #f9f9f9
    >.inner-box{
      width: 120rem
      margin: 0 auto
      padding-bottom: 2rem
      >ul{
        margin-top: 2rem
        width: 100%
        display flex
        justify-content space-between
        flex-wrap wrap
        >li{
          width: 30%
          display flex
          justify-content center
          align-items center
          flex-direction column
          >img{
            width: 10rem
            height: 10rem
            transition all .3s
            &:hover{
              transform scale(1.1)
            }
          }
          >span{
            margin: 1rem 0
          }
          >p{
            font-weight: 600
          }
        }
      }
    }
  }
  >.serve-center{
    width: 100%
    background-color: #f9f9f9
    >.inner-box{
      width: 120rem
      margin: 2rem auto
      >ul{
        width: 100%
        display flex
        justify-content center
        >li{
          display flex
          flex-direction column
          align-items center
          justify-content center
          margin: 2rem 3rem
          >span{
            margin: .5rem
            font-weight: 600
          }
          >img{
            width: 6rem
            height: 6rem
            border-radius 50%
            transition all .3s
            &:hover{
              transform scale(1.1)
            }
          }
        }
      }
    }
  }
  >.banner{
    width: 100%
    height: 40rem
    background-color: #f9f9f9
    .banner-box{
      width: 100%
      height: 40rem
      background-color: #364d79
      >img{
        width: 100%
        height: 100%
        object-fit cover
      }
    }
  }
}
.ant-carousel .slick-slide {
  text-align: center;
  height: 40rem
  background: #364d79;
  overflow: hidden;
}
.form-item {
  display flex
  flex-direction: column
  height 80px
  span {
    margin-bottom 10px
  }
}
