footer{
  width: 100%
  height: 16rem
  background-color: #008cd7
  overflow hidden
  >.inner-box{
    width: 120rem
    height: 100%
    margin: 0 auto
    display flex
    justify-content center
    >div{
      height: 100%
    }
    >.wx{
      display flex
      justify-content center
      align-items: center;
      padding-right: 5rem
      >img{
        width: 9rem
        height: 9rem
      }
    }
    >.right{
      display flex
      justify-content center
      flex-direction column
      >p{
        color #fff
        width: 100%
        height: 3rem
        margin-bottom: 0
        display flex
        align-items center
        >svg{
          width: 2rem
          height: 2rem
          margin-right: 1rem
        }
      }
    }
  }
}
