.index-header{
  width: 100%
  background-color: #f9f9f9
  >.nav-box{
    width: 100%
    background-color: #008cd7
    >.inner-box{
      width: 120rem
      margin: 0 auto
      height: 6rem
      background-color: #008cd7
      padding: 0 2rem
      >ul{
        width: 100%
        height: 100%
        >li{
          float: left;
          height: 100%
          cursor pointer
          display flex
          align-items center
          justify-content center
          padding: 0 2rem
          color #fff
          font-weight: 600
          transition all .3s
          background-color: #008cd7
          &:hover{
            background-color: #006caa
          }
          &.select{
            background-color: #006caa
          }
        }
      }
    }
  }
  >.top{
    width: 100%
    background-color: #f1f1f1
    >.inner-box{
      background-color: #f1f1f1
      padding: 0 2rem
      width: 120rem
      margin: 0 auto
      height: 5.5rem
      display flex
      align-items center
      justify-content space-between
      font-weight: 600
      overflow: hidden;
      >.left{
        display flex
        align-items center
        >.logo{
          display inline-block
          padding: 0 1rem
          height: 3.6rem
          line-height: 3.6rem
          background-color: #231816
          color #fff100
          margin-right 1.3rem
          border-radius .5rem
        }
      }
      >.right{
        display flex
        align-items center
        >span{
          margin-left: 1rem
          font-size: 1.7rem
        }
        >svg{
          width: 4rem
        }
      }
    }
  }
}
